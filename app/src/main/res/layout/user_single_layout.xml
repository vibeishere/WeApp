<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/userSingleDisplayPicture"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/userSingleDisplayName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="16sp"
        app:layout_constraintStart_toEndOf="@+id/userSingleDisplayPicture"
        app:layout_constraintTop_toTopOf="parent"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/userSingleStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/poppins_light"
        android:textSize="14sp"
        app:layout_constraintStart_toEndOf="@+id/userSingleDisplayPicture"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/onlineStatus"
        android:layout_width="11dp"
        android:layout_height="10dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:visibility="invisible"
        app:layout_constraintStart_toEndOf="@+id/userSingleDisplayName"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/online" />

</androidx.constraintlayout.widget.ConstraintLayout>